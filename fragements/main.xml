       <Button
           android:id="@+id/b2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="status"/>
       <Button
           android:id="@+id/b3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
